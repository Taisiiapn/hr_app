<ul>
    <% data.forEach(function(item){ %>

        <li> <%= item.name %> </li>
        <!-- <li> <%= item.id %> </li> -->

        <%- include('../buttonsSkeleton.ejs', { item }); %>

        <script>

            document.getElementById(`delete-${'<%= item.id %>'}`).addEventListener('click', e => {

                fetch(`http://localhost:3000/departments/${'<%= item.id %>'}/delete`, {
                    method: 'post'
                })
                .then(res => res.json)
                .catch(err => console.log(err))
            })

        </script>

    <% }); %>
</ul>